                    <div class="header-action-btn">
                        @if (@Session["Username"] == null)
                        {

                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#signupModal">Signup</button>

                        }
                        else
                        {
                            <span>Welcom! @Session["Username"]</span>
                            <button type="button" class="btn btn-primary">@Html.ActionLink("Signout", "Signout", "Users")</button>

