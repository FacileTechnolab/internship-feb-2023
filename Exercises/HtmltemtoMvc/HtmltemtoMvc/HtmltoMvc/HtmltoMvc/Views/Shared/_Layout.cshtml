                <div class="header-logo">
                    <img src="~/Content/images/logo.png" alt="" class="img-fluid" />
                </div>
                <div class="header-menu">
                    <ul>
                        <li>@Html.ActionLink("Home", "Home", "Home")</li>
                        @*<li><a href="#home">Home</a></li>*@
                        <li>@Html.ActionLink("Partners", "Partners", "Home")</li>
                        @*<li><a href="#partners">Partners</a></li>*@
                        <li>@Html.ActionLink("Marketing", "Marketing", "Home")</li>
                        @*<li><a href="#marketing">Marketing</a></li>*@
                        <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                        @*<li><a href="#faq">FAQ</a></li>*@

                        @{
                            if (isloggedIn)
                            {
                                <li>@Html.ActionLink(User.Identity.Name, "Index", "Home")</li>
                                <li>@Html.ActionLink("Signout", "Signout", "Users")</li>



                            }
                            else
                            {
                                <li>@Html.ActionLink("Login", "Login", "Users")</li>
                                <li>@Html.ActionLink("Signup", "Signup", "Users")</li>
                            }


                        }
                    </ul>


                </div>
                <div class="header-action-btn">
                    @if (Session["UserName"] != null)
                    {
                        <span>Welcome, @Session["UserName"] </span>
                        @*<h3>@Html.ActionLink("Signout", "Signout", "Users")</h3>*@
                <button class="btn btn-primary">@Html.ActionLink("Signout", "Signout", "Users")</button>


                    }
                    else
                    {
                        <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-outline-primary">LogIn</button>
                        <button class="btn btn-primary">@Html.ActionLink("Signup", "Signup", "Users")</button>
                        @*<button class="btn btn-primary">Sign up</button>*@

                    }

                </div>
            </div>
    </header>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
