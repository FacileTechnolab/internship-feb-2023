@model List<firstdemonewmvcasp.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class=" table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Cus_Name, "Details", "Customer", new { id = customer.Cus_Id })</td>
                    <td>@customer.MemberShipType.DiscountRate%</td>
                </tr>
            }
        </tbody>
    </table>
}
