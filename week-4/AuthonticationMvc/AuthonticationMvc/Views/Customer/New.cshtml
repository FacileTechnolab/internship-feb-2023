@model AuthonticationMvc.Views.ViewModel.NewCustomerViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    @Html.ValidationSummary(true, "Please Fix the followng errors.")
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Customer.Cus_Name)
        @Html.TextBoxFor(m => m.Customer.Cus_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Cus_Name)
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Customer.MemberShipTypeId)
        @Html.DropDownListFor(m => m.Customer.MemberShipTypeId, new SelectList(Model.MemberShipTypes, "ID", "DiscountRate"), "Select MemberShip Types", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MemberShipTypeId)
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Customer.Birthdate)
        @*<label>Date of Birth</label>*@
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)
    </div>

    <div class="mb-3 form-check p-0 mt-2">

        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNews) Subscribed to Newsletter?
            @Html.ValidationMessageFor(m => m.Customer.IsSubscribedToNews)
        </label>
    </div>
    @Html.HiddenFor(m => m.Customer.Cus_Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary px-4 rounded-5 btn-success">Save</button>

}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval") 
}