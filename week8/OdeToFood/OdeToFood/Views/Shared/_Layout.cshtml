<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />*@


    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />*@
    <environment include="Development">
        <link href="node_modules\bootstrap\dist\css\bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href=" https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="node_modules\bootstrap\dist\css\bootstrap.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"/>
              </environment>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">OdeToFood</a>
            </div>
            <div class="navbar-right">
               <vc:login-logout></vc:login-logout>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <footer>
            @RenderSection("footer", required: false)
            <vc:greeter></vc:greeter>


        </footer>
    </div>
    <environment include="Development">
        <script src="~/jquery/"></script>
        <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js">

        </script>
        <script src="~/jquery/jquery-validate/jquery.validate.js"></script>
    </environment>
  
    @*<div>
        @DateTime.Now.Year
    </div>*@

</body>
</html>
