@model IEnumerable<WebApplication1.Models.Customer>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(!Model.Any())
            {
                <p>We don't have any customer yet</p>
            }
else
            {
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Customers</th>
                            <th>Discount Rate</th>
                        
                        </tr>
                    </thead>
                    <tbody>
                         @foreach(var customers in Model)
                {
                    <tr>
                        <td>

                            @Html.ActionLink(customers.Name, "Edit", "Customer", new { id = customers.Id }, null)
                      
                        </td>
                        <td>
                            @customers.MembershipType.DiscountRate%
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            }

